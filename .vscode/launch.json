	"version": "0.2.0",
	"configurations": [
		{
			"name": "(lldb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/pipex",
			"args": ["../infile.txt", "grep hello", "wc", "../outfile.txt"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": 
			[
				{
					"name": "PATH",
					"value": "/usr/bin/env:${env:PATH}"
					}
			],
			"externalConsole": false,
			"MIMode": "lldb"
		}

	]
}